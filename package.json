{
  "name": "Distalker",
  "version": "1.2.7",
  "description": "게임뿐만이 아닌 더 많은 활동을 Discord에서 사람들과 공유해보세요.",
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite --config src/renderer/vite.config.mjs\" \"wait-on http://localhost:5173 && npx cross-env NODE_ENV=development ALLOW_DEV_SERVER=true electron .\"",
    "start": "electron .",
    "build:renderer": "vite build --config src/renderer/vite.config.mjs",
    "build": "npm run build:renderer",
    "build:win": "npm run build:renderer && electron-builder --win",
    "build:win-portable": "npm run build:renderer && electron-builder --win portable",
    "build:linux": "npm run build:renderer && electron-builder --linux",
    "build:linux-appimage": "npm run build:renderer && electron-builder --linux AppImage",
    "build:linux-deb": "npm run build:renderer && electron-builder --linux deb",
    "dist": "npm run build:renderer && electron-builder",
    "icons:generate": "node scripts/generate-icons.mjs",
    "remaster": "vite --config src/remaster/vite.config.mjs"
  },
  "keywords": [
    "discord",
    "rpc",
    "presence",
    "windows",
    "active-window"
  ],
  "author": {
    "name": "deviloper.5137",
    "email": "deviloper.5137@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/deviloper5137/Distalker",
  "dependencies": {
    "active-win": "^8.1.0",
    "chalk": "^5.3.0",
    "discord-rpc": "^4.0.1",
    "dotenv": "^16.4.5",
    "electron-updater": "^6.6.2",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^38.0.0",
    "electron-builder": "^24.13.3",
    "png-to-ico": "^2.1.8",
    "sharp": "^0.33.5",
    "vite": "^7.1.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.distalker.app",
    "productName": "Distalker",
    "publish": {
      "provider": "github",
      "owner": "deviloper5137",
      "repo": "Distalker"
    },
    "win": {
      "icon": "assets/icons/win/app.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icons/png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Distalker"
    },
    "files": [
      "src/**",
      "assets/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      },
      ".env",
      ".env.production"
    ]
  }
}
